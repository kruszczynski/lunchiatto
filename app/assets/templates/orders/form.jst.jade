.row
  .columns.text-center
    if locals.from
      h1 Edit order
    else
      h1 New order
- var selected = locals.user_id ? locals.user_id : ''
form
  .row
    .columns
      .full-error.panel.hide
        p
  .row
    .columns
      label.user-label Payer
        select.chosen-select.user-id(name='user_id')
          option(value='') Select Payer
          each user in gon.usersForSelect
            option(value=user.id, selected=user.id==selected)=user.name
        small.error.hide
  .row
    .columns
      label.from-label Restaurant
        input.from(type='text', name='from', placeholder='Where are we ordering from?', value=locals.from)
        small.error.hide
  .row
    .columns
      label.shipping-label Shipping Cost
        input.shipping(type='text', name="shipping", value=locals.shipping)
        small.error.hide
  .row
    .columns
      button.success.expand.button(type='submit') Save
