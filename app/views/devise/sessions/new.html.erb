<h2>Sign In</h2>
<div class="line"></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form'}) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: 'Email', class: 'input' %>
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password', class: 'input' %>
  </div>
  <div class="form-row">
    <%= f.submit 'Sign in', class: 'button btn-right' %>
  </div>
  <%= render 'devise/shared/links' %>
<% end %>
